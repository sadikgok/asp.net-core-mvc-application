@using WebApplication3.Models.Siniflar
@model List<SatisHareket>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<table id="#tbl1" class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Cari</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisId</td>
            <td>@item.Urun.UrunAdi</td>
            <td>@item.Cari.CariAdi@item.Cari.CariSoyadi</td>
            <td>@item.Personel.PersonelAdi @item.Personel.PersonelSoyadi</td>
            <td>@item.Adet</td>v
            <td>@item.Fiyat</td>v
            <td>@item.ToplamTutar</td>
            <td>@item.SatisTarih</td>

            <td><a href="/Satis/SatisGetir/@item.SatisId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@item.SatisId" class="btn btn-danger">Detay</a></td>
        </tr>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Yap</a>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>
