@model WebApplication3.Models.Siniflar.Kategori
@{
    ViewData["Title"] = "KategoriEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/scripts/jquery-3.3.1js"></script>
<br />
<h1>Kategori Ekle</h1>

<br />
<form class="form-group " method="post">
    @Html.LabelFor(x=>x.KategoriAd)
    @Html.TextBoxFor(x=>x.KategoriAd,new { @class="form-control" })
    <br />
    <button class="btn btn-info" id="Btn1">Kaydet</button>
    <script>
        $('#Btn1').click(function () {
            alert("Kategoriyi başarılı bir şekilde eklediniz. umarım başınız göğe ermiştir...");
        });
    </script>
</form>