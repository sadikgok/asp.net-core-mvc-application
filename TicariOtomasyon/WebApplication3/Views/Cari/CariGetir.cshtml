@model WebApplication3.Models.Siniflar.Cari
@{
    ViewData["Title"] = "CariGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2> Cari Güncelleme Ekranı</h2>
<br />

@using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x=>x.CariId)
        @Html.LabelFor(x=>x.CariAdi)
        @Html.TextBoxFor(x=>x.CariAdi,new{@class="form-control"})
        @Html.ValidationMessageFor(x=>x.CariAdi,"",new{@style="color:magenta"})
        <br />
        @Html.LabelFor(x=>x.CariSoyadi)
        @Html.TextBoxFor(x=>x.CariSoyadi,new{@class="form-control"})
        @Html.ValidationMessageFor(x=>x.CariSoyadi,"",new{@style="color:magenta"})
        <br />
        @Html.LabelFor(x=>x.CariUnvani)
        @Html.TextBoxFor(x=>x.CariUnvani,new{@class="form-control"})
        <br />
        @Html.LabelFor(x=>x.CariSehir)
        @Html.TextBoxFor(x=>x.CariSehir,new{@class="form-control"})
        <br />
        @Html.LabelFor(x=>x.CariMail)
        @Html.TextBoxFor(x=>x.CariMail,new{@class="form-control"})
        <br />
        @Html.LabelFor(x=>x.CariTelefon)
        @Html.TextBoxFor(x=>x.CariTelefon,new{@class="form-control"})
        <br />
        <button class="btn btn-primary">Güncelle</button>
    </div>
}